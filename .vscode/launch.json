    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "name": "jest-current-file",
            "request": "launch",
            "args": [
                "--runInBand",
                "--config=jest.config.js",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "run CLI",
            "program": "${workspaceFolder}/build/lib/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}